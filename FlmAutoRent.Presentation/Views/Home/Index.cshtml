@using FlmAutoRent.Presentation.Models;
@model HomepageViewModel;

<section class="display-flex flex-direction-column justify-content-center vehicle">
        <h2 class="text-center font-weight-00">LE NOSTRE AUTO</h2>
    </section>
    <section class="display-flex flex-direction-row justify-content-center vehicle margin-top-small owl-carousel">
        @foreach (var vehicle in Model.Vehicles)
        {
            <section class="card margin-left-xsmall margin-right-xsmall">
                <section class="background-image background-image-cover box-shadow" style="background-image: url('@vehicle.srcImg');"></section>
                <section class="margin-left-medium margin-right-medium padding-small box-shadow vehicle-data">
                    <p class="text-center font-weight-600">@vehicle.vehiclebrand</p>
                    <p class="text-center">@vehicle.vehicleModel</p>
                    <a class="btn background-color-red color-white text-center" href="@vehicle.permaLink">Visualizza</a>
                </section>

            </section>
        }
    </section>

    <section class="display-flex flex-direction-column justify-content-center margin-top-medium presentation-container">
        <section class="display-flex flex-direction-row justify-content-center">
            <h2 class="text-center font-weight-00">NOLEGGIO AUTO SARONNO</h2>
        </section>
        <section class="display-flex justify-content-center margin-top-xsmall noleggio">
            <section class="display-flex flex-direction-row justify-content-center padding-left-small padding-bottom-medium padding-right-medium width-1-2">
                <section class="display-flex flex-direction-column justify-content-center text-center width-1-1 presentation">
                    <p class="display-flex flex-direction-column justify-content-center border-dashed width-1-1">@Model.Presentation</p>
                </section>
            </section>
            <section id="presentation" class="background-image background-image-cover info" style="background-image: url(@Model.ContentImagePresentation);"></section>
        </section>
    </section>
